<android.support.v4.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/lnl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
            <TextView
                android:id="@+id/tvcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="19sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_perm_identity_black_24dp"
                android:layout_marginLeft="3dp"
                android:paddingTop="2dp"
                />
            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/tbratingstar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:rating="5"
                android:stepSize="0.1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="( Đánh giá )"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh giá phim ."
            android:layout_below="@+id/lnl1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            />
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            >
            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/ratingshow"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:numStars="5"
                android:stepSize="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:theme="@style/Widget.AppCompat.RatingBar"
                />
            <EditText
                android:id="@+id/edt_content"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/ratingshow"
                app:layout_constraintRight_toLeftOf="@+id/btnSend"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:maxLength="500"
                android:textColor="@color/colorGray"
                android:backgroundTint="@color/colorBlue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edt_content"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Tối đa 500 ký tự !"
                android:textSize="16sp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorGray"
                />
            <ImageView
                android:id="@+id/btnSend"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@+id/ratingshow"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_send_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                />
        </android.support.constraint.ConstraintLayout>




        <TextView
            android:id="@+id/tvtext"
            android:layout_below="@+id/ctl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/startblue"
            android:text="Người xem đánh giá ->"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_rating1"
            android:layout_below="@+id/tvtext"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
